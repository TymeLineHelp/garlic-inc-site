html, button, input, select, textarea, .pure-g [class *= "pure-u"], .pure-g-r [class *= "pure-u"]{
    font-family: 'Open Sans', sans-serif;
}

html{
    background: #2d2d2d;
    overflow-y: scroll;
}

body{
    display: flex;
    flex-direction: column;
    margin: 0 auto;
}

header > .home-menu{
    background: inherit !important;
    height: 54px;
    display: flex;
}

header > .home-menu > a.pure-menu-heading, header > .home-menu > ul, header > .home-menu > ul > li{
    display: flex !important;
    align-items: center;
    justify-content: center;
    line-height: normal !important;
}

header > .home-menu > a.pure-menu-heading{
    color: white;
    font-size: 1.5em;}

header > .home-menu > ul > li > a{
    color: #ced4d9;
}

header > .home-menu > ul > li > a:hover, header > .home-menu > ul > li > a:focus{
    background: inherit !important;
}

header > .home-menu > ul > li > a:hover, header > .home-menu > ul > li.pure-menu-selected > a{
    color: white;
}

main{
    background-color: #ebf4fa;
    position: relative;
}

footer{
    text-align: center;
    color: #b3b3b3;
    text-decoration: none;
    font-size: 0.8em;
    padding: 15px;
    line-height: 24px;
}

footer a{
    color: #fff;
    text-decoration: none;
}
#mobtitle.navbar-item{
  position: absolute;
  padding-right: -800px;
}

footer iframe{
    vertical-align: middle;
}

.footer_container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

@media only screen and (max-width : 640px) {

  a.navbar-item {
    display: inline;
    float: left;
    background-color: #FF4000;
  }
   #navbarMenuHeroA.navbar-menu {
      display: inline;
      background-color: #FF4000;
      width: 100%;
  }

    #navbarMenuHeroA.navbar-item {
      display: none;
      position: relative;
      background-color: #FF4000;

      z-index: 1;
  }

  #navbarMenuHeroA.navbar-end  #navbarMenuHeroA.navbar-item {
      display: inline-block;
      background-color: #FF4000;
  }
  #mobtitle.navbar-item{
    position: relative;
    padding-bottom: 0px;
  }

  h1.title{
    height: 15;
    font-size: 15px;
  }

}
